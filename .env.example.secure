# IMPORTANTE: NUNCA compartilhe ou comite arquivos .env.local com credenciais reais
# Este é um arquivo de exemplo - copie para .env.local e adicione suas credenciais reais

# Credenciais do Firebase Admin SDK (formato JSON)
# ATENÇÃO: Substitua pelo seu próprio JSON de credenciais do Firebase Admin SDK
# Mantenha este arquivo FORA do controle de versão (Git)
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"seu-projeto-id","private_key_id":"chave-privada-id","private_key":"-----BEGIN PRIVATE KEY-----\nSUA_CHAVE_PRIVADA\n-----END PRIVATE KEY-----\n","client_email":"exemplo@seu-projeto.iam.gserviceaccount.com","client_id":"123456789","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"https://www.googleapis.com/robot/v1/metadata/x509/exemplo%40seu-projeto.iam.gserviceaccount.com","universe_domain":"googleapis.com"}

# URL do banco de dados Firebase
FIREBASE_DATABASE_URL=https://seu-projeto-id.firebaseio.com

# Porta para desenvolvimento local (opcional)
PORT=3000

# Configurações do serviço de email
EMAIL_HOST=smtp.exemplo.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=seu-email@exemplo.com
EMAIL_PASSWORD=sua-senha-segura
EMAIL_FROM=seu-email@exemplo.com
